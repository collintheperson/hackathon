{{#partial "content"}}

    {{#if editMember}}
        <h1>Edit this Member!</h1>
        <form action="/teams/{{memberId}}/members/{{editMember.id}}/update" id="editMemberId" method="post" select name="editMemberId">
            <label for="name">Edit this members name.</label>
            <input id="name" name="name" type="text" value="{{editMember.memberName}}"><br>
            <label for="description">Edit this members's badge!</label>
            <input id="badge" name="badge" type="number" value="{{editMember.badge}}"><br>
            <label for="badge">Edit this members's badge!</label>

    {{else}}
        <form action="/teams/{{teamId}}/members/new" method="post">
            <label for="memberName"> Add a person</label>
            <input id="memberName" name="memberName" type="text" required>
            <label for="badge">Enter your desired badge number</label>
        <input id="badge" name="badge" type="number" required<br>

    {{/if}}
        <button type="submit" class="btn btn-default">Go!</button>
     </form>


{{/partial}}

{{> layout.hbs}}